  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gabrielnvk/viva-crm.git"
  },
  "bugs": {
    "url": "https://github.com/Gabrielnvk/viva-crm/issues"
  },
  "homepage": "https://github.com/Gabrielnvk/viva-crm#readme"
}